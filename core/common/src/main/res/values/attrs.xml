<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="MultiStateView">
        <attr name="msv_loadingView" format="reference" />
        <attr name="msv_emptyView" format="reference" />
        <attr name="msv_errorView" format="reference" />
        <attr name="msv_viewState" format="enum">
            <enum name="content" value="0" />
            <enum name="error" value="1" />
            <enum name="empty" value="2" />
            <enum name="loading" value="3" />
        </attr>
        <attr name="msv_animateViewChanges" format="boolean" />
    </declare-styleable>

    <declare-styleable name="TagFlexboxLayout">
        <attr name="tagBackground" format="reference"/>
        <attr name="tagTextSize" format="dimension"/>
        <attr name="tagTextColor" format="reference|color"/>
        <attr name="tagPadding" format="dimension"/>
        <attr name="tagSpacing" format="dimension"/>
        <attr name="tagMaxLine" format="integer" />
    </declare-styleable>
</resources>